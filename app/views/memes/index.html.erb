<div class="w3-container">
  <h1>Memes</h1>
</div>
<% @memes.each do |meme| %>
  <div class="w3-cell-row">
    <div class="w3-cell w3-container">
      <p>
      <div><%= image_tag meme.image %></div>
      <div><%= link_to "Show Meme", meme_path(meme) %>
            <%= link_to 'Destroy Meme', meme_path(id: meme.id),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
      </div>
      <div><h3>Comments:</h3> <%= render meme.comments %></div>
      </p>
    </div>
  </div>
<% end %>